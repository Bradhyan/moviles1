<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Descubre que número es mayor" />

        <EditText
            android:id="@+id/etnumber1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:hint="Digite numero uno"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etnumber2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:hint="Digite el número dos"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etnumber3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:hint="Digite numero tres"
            android:ems="10"
            android:inputType="number" />
        <EditText
            android:id="@+id/etnumber4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:hint="Digite el número cuatro"
            android:ems="10"
            android:inputType="number"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncalcular"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/btnclean"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="12dp"
                android:textSize="22dp"
                android:layout_weight="1"
                android:text="Limpiar" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="El número mayor es:" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/design_default_color_error"
            android:text="" />

    </LinearLayout>
</LinearLayout>